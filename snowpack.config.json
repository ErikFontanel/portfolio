{
  "homepage": "/",
  "scripts": {
    "mount:eleventy": "mount dist --to /",
    "mount:static": "mount static --to /",
    "run:sass": "sass static/scss:static/css",
    "run:sass::watch": "$1 --watch --embed-source-map",
    "run:11ty": "eleventy",
    "run:11ty::watch": "$1 --watch"
  },
  "devOptions": {
    "port": 3000,
    "open": "none",
    "out": "dist"
  }
}