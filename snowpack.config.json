{
  "homepage": "/",
  "scripts": {
    "mount:eleventy": "mount dist --to /",
    "mount:public": "mount public --to /public",
    "mount:src": "mount src --to /public",
    "run:sass": "sass src/scss:public/css --embed-source-map",
    "run:sass::watch": "$1 --watch",
    "build:tpostcss": "postcss src/css",
    "run:tpostcss::watch": "$1 --watch",
    "run:11ty": "eleventy",
    "run:11ty::watch": "$1 --watch"
  },
  "devOptions": {
    "port": 8080,
    "open": "none",
    "out": "dist",
    "secure": true
  }
}