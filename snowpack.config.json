{
  "homepage": "/",
  "scripts": {
    "mount:eleventy": "mount dist --to /",
    "mount:static": "mount static --to /",
    "run:sass": "sass static/scss:static/css --embed-source-map",
    "run:sass::watch": "$1 --watch",
    "build:tpostcss": "postcss static/css/app.css -d static/css",
    "run:tpostcss::watch": "$1 --watch --no-map",
    "run:11ty": "eleventy",
    "run:11ty::watch": "$1 --watch"
  },
  "devOptions": {
    "port": 8080,
    "open": "none",
    "out": "dist"
  }
}