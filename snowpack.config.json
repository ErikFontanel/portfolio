{
  "homepage": "/",
  "scripts": {
    "mount:eleventy": "mount dist --to /",
    "mount:public": "mount dist/public --to /public",
    "mount:src": "mount src --to /public",
    "run:sass": "sass src/scss:src/css --no-source-map",
    "run:sass::watch": "$1 --watch",
    "run:tpostcss": "postcss src/css/**/*.css -d dist/public/css",
    "run:tpostcss::watch": "$1 --watch",
    "run:11ty": "eleventy",
    "run:11ty::watch": "$1 --watch"
  },
  "devOptions": {
    "port": 8080,
    "open": "none",
    "out": "dist",
    "secure": true
  }
}