{% extends './base.njk' %}

{# Get About page content #}
{% set about = false %}

{% for item in collections.page %}
  {% if item.fileSlug === 'about' %}
    {% set about = item %}
  {% endif %}
{% endfor %}


{% block main %}
  {% block intro %}
    <div class="intro">
      <div class="info">
        {{ content|safe }}

        {% if about %}
          {% button
            url = about.url,
            label = 'about' if about
            %}
        {% endif %}
      </div>
      {% include "cta.njk" %}
    </div>
  {% endblock %}

  {% block projects %}
    <div class="projects grid ">
      {% for project in projects %}
        {% include "project-item.njk" %}
      {% endfor %}
    </div>
  {% endblock %}
{% endblock %}
