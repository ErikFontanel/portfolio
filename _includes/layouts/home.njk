{% extends './base.njk' %}

{% import "../page-item.njk" as pageitem %}

{# Get About page content #}
{% set about = false %}
{% set expertise = false %}

{% for item in collections.page %}
  {% if item.fileSlug === 'about' %}
    {% set about = item %}
  {% elif item.fileSlug === 'expertise' %}
    {% set expertise = item %}
  {% endif %}
{% endfor %}

{%- block bodyClass -%}
  home
{%- endblock -%}

{%- set cta -%}
  <abbr aria-label="open to job offers" class="jobs-cta">
    Freelance {%- include "cta-jobs.njk" -%}
  </abbr>
{%- endset -%}


{% block main %}
  {% block intro %}
    <div class="intro">
      <div class="info">
        {% if title %}
          <h1 class="h-m">{{ title }}</h1>
        {% endif %}

        {{ content|replace('Freelance', cta, 1)|safe }}

        {% if about %}
          {% button
            url = about.url,
            label = 'about' if about
            %}
        {% endif %}
      </div>

      {% include "cta.njk" %}
    </div>
  {% endblock %}

  {% block projects %}

  {% block projects %}
    {% if projects %}
      <div class="projects">
        {% for project in projects %}

          {% include "../project-item.njk" %}

          {% if loop.index0 === 2 %}
            </div>
            {{ pageitem.pageItem(expertise) }}
            <div class="projects">
          {% endif %}

        {% endfor %}
      </div>
    {% endif %}
  {% endblock %}

{% endblock %}
