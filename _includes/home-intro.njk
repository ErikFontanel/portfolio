<div class="intro grid grid:full">
  <div class="info">
    {% block info %}
      {% if title %}
        <h1 class="h-l intro--title">{{- title|replace('Freelance', cta, 1)|safe -}}</h1>
      {% endif %}
      {% if subtitle %}
        <h2 class="h-s intro--subtitle">{{ subtitle }}</h2>
      {% endif %}
    {% endblock %}
  </div>

  <div class="object grid:full"><canvas class="intro"></canvas></div>
</div>
