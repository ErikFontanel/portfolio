<a class="project-item" href="{{ project.url | url }}">

  {% if project.data.thumbnail %}
  {# <div class="project-item--img"></div> #}
    <img class="project-item--img" src="{{ project.url + project.data.thumbnail | url }}" alt="{{ project.data.title }}"/>
  {% endif %}

  {% if project.data.title %}
    <h2 class="project-item--title text-m">{{ project.data.title }}</h2>
  {% endif %}

  {% if project.data.client %}
    <h3 class="project-item--client">{{ project.data.client }}</h3>
  {% endif %}

</a>
