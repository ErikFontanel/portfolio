{%- set hasLink = true -%}
{%- set thumbnail = project.data.thumbnail -%}
{%- set tags =  project.data.tags | except('project') if project.data.tags -%}
{%- set list_layout = project.data.list_layout -%}
{%- set title = project.data.title -%}

<article class="project-item {{ project.data.list_layout }}">
  {% if thumbnail %}
    <a href="{{ project.url }}" class="project-item--img" >
      {% image {
          path: project.url + thumbnail | url,
          alt: project.data.title
        } %}
    </a>
  {% endif %}

  <div href="{{ project.url }}" class="project-item--text">
    {% if project.data.client %}
      <h3 class="project-item--client text-sub h-m">
        <a href="{{ project.url }}">{{ project.data.client }}</a>
      </h3>
    {% endif %}

    {% if project.data.title %}
      <h2 class="project-item--title h-l"><a href="{{ project.url }}">{{ project.data.title }}</a></h2>
    {% endif %}

    {% if tags %}
      <ul class="project-item--tags">
        {% for tag in tags %}
          {%- button
            url = '/work/tagged/' + tag|slug +'/',
            label = tag,
            name = 'label' -%}
        {% endfor %}
      </ul>
    {% endif %}
  </div>
</article>
